@page
@model Participants
@{
    ViewData["Title"] = "Osavõtjad";
}

<div class="bg-white">
    <div class="grid-container-add-event">
        <div class="grid-item-add-event bg-blue">
            Osavõtjad
        </div>
        <div><img class="add-event-img" src="~/libled.jpg" /></div>
    </div>

    <div class="participants-body">

        <div class="add-event-caption">
            Osavõtjad
        </div>

        <div class="participants">
            <div>Ürituse nimi:</div>
            <div>@Model.EventToShow.Name</div>
            <div>Toimumisaeg:</div>
            <div>@Model.EventToShow.EventDate</div>
            <div>Koht:</div>
            <div>@Model.EventToShow.Location</div>
            <div>Osavõtjad:</div>
            <div>
                <br />
                <div class="participants-list">
                    @{int count = 1;}
                    @foreach (Guest guest in @Model.guests)
                        {
                            <div>@count. @guest.FirstName @guest.LastName</div>
                            <div>@guest.IdNumber</div>
                            <div><a href="ParticipantInfo?id=@guest.GuestId">Vaata</a></div>
                            <div><a href="ParticipantInfo?id=@guest.GuestId">Kustuta</a></div>
                            { count++; }
                        }

                </div>
            </div>
        </div>

    </div>




    <div class="add-event-form">
        <div class="add-event-caption">
            Osavõtjate lisamine
        </div>
        <form action="" method="post">
            <input class="form-container-detail" type="radio" name="clientType" value="false" checked/>
            <label class="form-container-detail" for="fname">Eraisik</label>
            <input class="form-container-detail" type="radio" name="clientType" value="true" />
            <label class="form-container-detail" for="firstName">Ettevõte</label>
            <div class="form-container">
                <label class="form-container-detail" for="firstName">Eesnimi/Ettevõtte nimi:</label>
                <input class="form-container-detail" type="text" id="firstName" name="firstName" />
                <label class="form-container-detail" for="lastName">Perenimi:</label>
                <input class="form-container-detail" type="text" id="lastName" name="lastName" />
                <label class="form-container-detail" for="idNumber">Isikukood:</label>
                <input class="form-container-detail" type="text" id="idNumber" name="idNumber" />
                <label class="form-container-detail" for="payment">Maksmisviis:</label>
                <select class="form-container-detail" name="payment" id="payment">
                    <option value="Sularaha">Sularaha</option>
                    <option value="Pangaülekanne">Pangaülekanne</option>
                </select>
                <label class="form-container-detail" for="addInfo">Lisainfo:</label>
                <textarea class="form-container-detail" id="addInfo" name="addInfo" rows="3" cols="60"></textarea>
                <input type="number" name="eventId" value="@Model.EventToShow.EventId" hidden/>
            </div>
            <br />
            <br />
            <input class="form-button" type="button" value="Tagasi" />
            <input class="form-button bg-blue" type="submit" value="Salvesta" />
        </form>
    </div>

    <div>
        @foreach (string error in Model.Errors)
        {
            <p class="error">@error</p>
        }
    </div>
</div>
